{
  "name": "electron-next-boilerplate",
  "version": "0.1.4",
  "main": "app/main/main.js",
  "description": "A boilerplate for Electron + Next.",
  "scripts": {
    "start": "electron .",
    "next:build": "run-s renderer:build renderer:export",
    "renderer:build": "next build app/renderer",
    "renderer:export": "next export app/renderer",
    "dist": "run-s next:build \"electron:build {@}\" --",
    "electron:build": "build --dir --x64 --publish=never",
    "lint": "tslint app/**/*.ts{,x}",
    "test": "run-s next:build \"test:jest {@}\" --",
    "test:jest": "jest"
  },
  "author": "shamofu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/electron-next-boilerplate.git"
  },
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/out/**"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/next.config.js",
      "!app/renderer/out/**",
      "!app/renderer/tests/**",
      "!app/renderer/.next/**"
    ],
    "coverageDirectory": ".coverage",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [["next/babel", { "preset-env": { "modules": "commonjs" } }]]
        }
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/next": "^6.0.0",
    "@types/react": "^16.3.17",
    "@types/styled-jsx": "^2.2.3",
    "@zeit/next-typescript": "^1.0.1",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "jest": "^23.1.0",
    "next": "^5.1.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "spectron": "^3.8.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.4"
  }
}

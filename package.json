{
  "name": "electron-next-boilerplate",
  "version": "0.0.6",
  "main": "app/main/main.js",
  "description": "A boilerplate for Electron + Next.",
  "scripts": {
    "start": "electron .",
    "build": "next build app/renderer && next export app/renderer",
    "dist": "yarn build && build --dir --x64 --publish=never",
    "lint": "eslint --ignore-path .gitignore app",
    "test": "yarn build && jest"
  },
  "author": "shamofu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/electron-next-boilerplate.git"
  },
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/out/**"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/next.config.js",
      "!app/renderer/out/**",
      "!app/renderer/tests/**",
      "!app/renderer/.next/**"
    ],
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "eslint": "^4.15.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.0.6",
    "jest-styled-components": "^4.9.0",
    "next": "^4.2.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "spectron": "^3.7.2",
    "styled-components": "^2.4.0",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.3"
  }
}
